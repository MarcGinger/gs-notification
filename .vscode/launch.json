{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS (Launch)",
            "program": "${workspaceFolder}/dist/main.js",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS (TypeScript)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start:debug"],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "smartStep": true,
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS (Build + Watch)",
            "program": "${workspaceFolder}/dist/main.js",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "smartStep": true,
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "node", 
            "request": "launch",
            "name": "Debug NestJS (npm start:debug)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start:debug"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "serverReadyAction": {
                "pattern": ".*Application is running on: (https?://\\S+).*",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to NestJS Debug Process",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug NestJS (Attach)",
            "port": 9229,
            "restart": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}